;BIBLIOTECA DE MACROS
ABRIR_ARCHIVO MACRO ruta,MODO
    MOV AH,3Dh
    LEA DX,ruta
    MOV AL,MODO
    INT 21h
ABRIR_ARCHIVO ENDM

LEER_ARCHIVO MACRO man,cuantosLeer,leidos
    MOV AH,3FH
    MOV BX,man
    MOV CX,cuantosLeer
    LEA DX,leidos
    INT 21h
LEER_ARCHIVO ENDM

CERRAR_ARCHIVO MACRO MANEJADOR
    MOV AH,3Eh
    MOV BX,manejador
    INT 21h
CERRAR_ARCHIVO ENDM

CURSOR MACRO ren,col,pag
    MOV AH,2
    MOV DH,ren
    MOV DL,col
    MOV BH,pag
    INT 10h
CURSOR ENDM    

IMP_CADENA MACRO cadena
    MOV AH,9
    LEA DX,cadena
    INT 21h
IMP_CADENA ENDM

CAR_COLOR MACRO CUANTOS,CARACTER,PAG,COLOR
    MOV AH,9
    MOV CX,CUANTOS
    MOV AL,CARACTER
    MOV BH,PAG
    MOV BL,COLOR
    INT 10h
CAR_COLOR ENDM 
